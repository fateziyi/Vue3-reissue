{
  "compilerOptions": {
    "outDir": "dist", // 输出目录
    "sourceMap": true, // 生成sourceMap
    "target": "es2016", // 编译目标
    "module": "esnext", // 模块格式
    "moduleResolution": "node", // 模块解析策略
    "strict": false, // 严格模式
    "resolveJsonModule": true, // 解析json模块
    "esModuleInterop": true, // 允许导入非模块的包
    "jsx": "preserve", // 保留jsx语法
    "lib": [
      "esnext",
      "dom"
    ], // 包含的库
    "baseUrl": ".",
    "paths": {
      "@vue/*": [
        "packages/*/src"
      ]
    }
  }
}